*
  box-sizing  border-box

body, html
  height 100%
  margin 0
  padding 0

  .container
    width 100%
    height 100%
    display flex
    justify-content center
    align-items center
    flex-direction row
    background lightgray
    padding 50px
    a
      padding 10px
    article
      display block
      padding 15px 20px 30px
      text-indent 15px
      width 300px
      min-height 100%
      background white
      position relative
      .num
        padding 5px
        position absolute
        right 0
        bottom 0
